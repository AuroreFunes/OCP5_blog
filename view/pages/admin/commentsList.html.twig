{% extends 'commons/base.html.twig' %}
{% block title %}DémosAF - Administration{% endblock %}

{% block content %}
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Auteur</th>
                            <th>Publié le</th>
                            <th>Contenu</th>
                            <th>Voir</th>
                        </tr>
                    </thead>

                    <tbody>
                    {% for comment in comments %}
                        <tr>
                            <td>{{ comment.author }}</td>
                            <td>{{ comment.created_on }}</td>
                            <td style="width: 100%;">{{ comment.comment }}</td>
                            <td>
                                <a href="index.php?action=admin&req=edit_comment_form&id={{ comment.id }}" 
                                    class="btn btn-primary">Voir</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <div class="d-flex justify-content-end mb-4">
                    <a class="btn btn-primary" href="index.php?action=admin&req=index">Retour →</a>
                </div>

            </div>
        </div>
{% endblock %}